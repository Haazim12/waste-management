<div class="relative overflow-x-auto w-full p-5 border ">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 border-gray-400 rounded-lg">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
          Matricule
        </th>
        <th scope="col" class="px-6 py-3">
          Radioélément
        </th>
        <th scope="col" class="px-6 py-3">
          Type
        </th>
        <th scope="col" class="px-6 py-3">
          Activité
        </th>
        <th scope="col" class="px-6 py-3">
          Demi-vie
        </th>
        <th scope="col" class="px-6 py-3">
          Date de dépôt
        </th>
        <th scope="col" class="px-6 py-3">
          Date d'élimination
        </th>
        <th scope="col" class="px-6 py-3 text-center">
          Actions
        </th>

      </tr>
    </thead>
    <tbody>
      <% @dechets.each do |dechet| %>
        <tr class="<%= dechet.decay_time > 2 ? 'border-green-400 bg-green-100' : 'border-red-400 bg-red-100' %> dark:bg-gray-800 text-black border border-2">
          <td class="px-6 py-4">
            <%= dechet.reg_number %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.radioelement %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.waste_type %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.activity %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.half_life %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.created_at.strftime("%F") %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.decay_date.strftime("%F") %>
          </td>
          <td class="px-6 py-4 flex items-center justify-center">
            <%= link_to 'Modifier', edit_dechet_path(dechet), class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
            <%= link_to 'Supprimer', dechet, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
            <button data-modal-target="waste-control-modal<%=dechet.id %>" data-modal-toggle="waste-control-modal<%=dechet.id %>" class="focus:outline-none text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900" type="button">
              Controler
            </button>
          </td>
        </tr>
        <%= render "shared/waste_control_modal" , dechet: dechet%>
      <% end %>
    </tbody>
  </table>
</div>
