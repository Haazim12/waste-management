<div class="relative overflow-x-auto w-full p-5 border ">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 border-gray-400 rounded-lg">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
          Matricule
        </th>
        <th scope="col" class="px-6 py-3">
          Radioélément
        </th>
        <th scope="col" class="px-6 py-3">
          Type
        </th>
        <th scope="col" class="px-6 py-3">
          Activité
        </th>
        <th scope="col" class="px-6 py-3">
          Demi-vie
        </th>
        <th scope="col" class="px-6 py-3">
          Date de dépôt
        </th>
        <th scope="col" class="px-6 py-3">
          Date d'élimination
        </th>
        <th scope="col" class="px-6 py-3">
          Actions
        </th>

      </tr>
    </thead>
    <tbody>
      <% @dechets.each do |dechet| %>
        <tr class="bg-white dark:bg-gray-800">
          <td class="px-6 py-4">
            <%= dechet.reg_number %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.radioelement %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.waste_type %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.activity %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.half_life %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.created_at %>
          </td>
          <td class="px-6 py-4">
            <%= dechet.elimination_date %>
          </td>
          <td class="px-6 py-4">
            <%= link_to 'Modifier', edit_dechet_path(dechet), class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
            <%= link_to 'Supprimer', dechet, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
