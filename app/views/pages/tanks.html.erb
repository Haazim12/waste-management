<div class="w-full flex h-full flex-col ">
  <div class="m-10 flex items-center justify-center">
    <h1 class="text-6xl font-bold text-center">
      Cuves
    </h1>
  </div>
  <div class="flex items-centet justify-around w-full">

    <div data-controller="tank1" class="flex items-center flex-col w-1/3">
      <canvas
  data-tank1-target="myChart1"
  data-chart1-data-value="<%= @data1.to_json %>"
  data-chart-options-value="<%= @chart_options.to_json %>"
></canvas>
      <h1 class="text-xl"><%= @tank1.radioelement.name%></h1>
      <div class="flex items-center justify-between">
        <span class="text-gray-500">
          Capacité maximale:
        </span>
        <span class="text-gray-500 ms-2">
          <%= @tank1.full_capacity%> L
        </span>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-gray-500">
          Volume occupé:
        </span>
        <span class="text-gray-500 ms-2">
          <%=@tank1.full_capacity - @tank3.current_capacity%> L
        </span>

      </div>
    </div>
