<div id="createProductModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full" data-controller="create-waste">
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
      <!-- Modal header -->
      <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Ajouter dechet</h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-target="createProductModal" data-modal-toggle="createProductModal">
          <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <%= simple_form_for waste , defaults:{input_html: {class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"}, label_html:{class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"}} do |f| %>

        <div class="grid gap-4 mb-4 sm:grid-cols-2">
          <div class="">
            <%= f.input :reg_number, label: :Matricule%>
          </div>
          <div>
            <%= f.input :radioelement, label: :Radioélément%>
          </div>
          <div>
            <%= f.input :activity, label: :Activité%>
          </div>
          <div>
            <%= f.input :half_life, label: "Demi-vie"%>
          </div>

        </div>
        <div class="flex w-full justify-between items-center gap-2 mb-4">
          <div class="flex items-center ps-4 border border-gray-200 rounded dark:border-gray-700 w-1/2">
            <%= f.radio_button :waste_type, "Solide", id: "waste_type_solid",class:"w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600", data: { action: "change->create-waste#toggle" } %>
            <%= f.label :waste_type, "Solide", for: "waste_type_solid" ,class: "w-full py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"%>
          </div>
          <div class="flex items-center ps-4 border border-gray-200 rounded dark:border-gray-700 w-1/2">
            <%= f.radio_button :waste_type, "Liquide", id: "waste_type_liquid",class:"w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600", data: { action: "change->create-waste#toggle" } %>
            <%= f.label :waste_type, "Liquide", for: "waste_type_liquid" ,class: "w-full py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"%>
          </div>
        </div>
        <div class="grid gap-4 mb-4 sm:grid-cols-2 hidden mb-4" data-create-waste-target="solidFields">
          <div >
            <%= f.input :solid_type, label: "type de solide"%>
          </div>
          <div class="mb-4">
            <%= f.input :weight, label: :poids%>
          </div>
          <div>
            <%= f.input :infectious,label: "Infectueux" ,wrapper_html: {class: "flex items-center ps-4 border border-gray-200 rounded dark:border-gray-700 w-1/2"}, label_html: {class: "py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"}, input_html:{class: "me-2 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"}%>
          </label>
        </div>

      </div>
      <div class="grid gap-4 mb-4 sm:grid-cols-2 hidden" data-create-waste-target="liquidFields">
        <div >
          <%= f.input :volume%>
        </div>

      </div>
      <%= f.submit "Ajouter dechet",class: "text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"%>

    <% end %>

  </div>
</div>
</div>
